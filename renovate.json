{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":dependencyDashboard",
    ":semanticCommits",
    ":separateMajorReleases"
  ],
  "schedule": ["before 5am on monday"],
  "timezone": "UTC",
  "labels": ["dependencies", "renovate"],
  "assignees": ["@payment-engine-team"],
  "reviewers": ["@payment-engine-team"],
  "prConcurrentLimit": 10,
  "prHourlyLimit": 5,
  "packageRules": [
    {
      "matchDatasources": ["maven"],
      "matchPackagePatterns": ["^org.springframework"],
      "groupName": "Spring Framework",
      "schedule": ["before 5am on monday"]
    },
    {
      "matchDatasources": ["maven"],
      "matchPackagePatterns": ["^io.micrometer"],
      "groupName": "Micrometer",
      "schedule": ["before 5am on monday"]
    },
    {
      "matchDatasources": ["maven"],
      "matchPackagePatterns": ["^org.testcontainers"],
      "groupName": "Testcontainers",
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "matchDatasources": ["maven"],
      "matchUpdateTypes": ["major"],
      "labels": ["dependencies", "major-update"],
      "assignees": ["@senior-engineers"]
    },
    {
      "matchDatasources": ["docker"],
      "enabled": true,
      "commitMessageTopic": "Docker image {{depName}}"
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security", "vulnerability"],
    "assignees": ["@security-team"],
    "schedule": ["at any time"]
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 5am on monday"]
  }
}
