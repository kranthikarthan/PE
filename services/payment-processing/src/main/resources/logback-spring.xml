<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    
    <springProperty scope="context" name="springAppName" source="spring.application.name"/>
    <springProperty scope="context" name="springProfile" source="spring.profiles.active"/>
    
    <!-- Console Appender with JSON for Production -->
    <appender name="CONSOLE_JSON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"application":"${springAppName}","environment":"${springProfile}"}</customFields>
            <fieldNames>
                <timestamp>timestamp</timestamp>
                <version>version</version>
                <logger>logger</logger>
                <thread>thread</thread>
                <level>level</level>
                <levelValue>level_value</levelValue>
                <message>message</message>
                <stackTrace>stack_trace</stackTrace>
            </fieldNames>
            <includeMdc>true</includeMdc>
            <includeMdcKeyName>mdc</includeMdcKeyName>
            <includeContext>true</includeContext>
            <includeStructuredArguments>true</includeStructuredArguments>
            <includeTags>true</includeTags>
            <includeCallerData>false</includeCallerData>
            <shortenedLoggerNameLength>36</shortenedLoggerNameLength>
        </encoder>
    </appender>
    
    <!-- Console Appender with Pattern for Development -->
    <appender name="CONSOLE_PATTERN" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} [%X{correlationId}] [%X{tenantId}] - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- File Appender with JSON -->
    <appender name="FILE_JSON" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/var/log/payment-processing/application.json</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>/var/log/payment-processing/application-%d{yyyy-MM-dd}.%i.json.gz</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>100MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"application":"${springAppName}","environment":"${springProfile}"}</customFields>
            <includeMdc>true</includeMdc>
        </encoder>
    </appender>
    
    <!-- Async Appender for Performance -->
    <appender name="ASYNC_CONSOLE" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>false</includeCallerData>
        <springProfile name="prod">
            <appender-ref ref="CONSOLE_JSON"/>
        </springProfile>
        <springProfile name="dev,test">
            <appender-ref ref="CONSOLE_PATTERN"/>
        </springProfile>
    </appender>
    
    <appender name="ASYNC_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <appender-ref ref="FILE_JSON"/>
    </appender>
    
    <!-- Loggers -->
    <logger name="com.paymentengine" level="DEBUG" additivity="false">
        <appender-ref ref="ASYNC_CONSOLE"/>
        <springProfile name="prod">
            <appender-ref ref="ASYNC_FILE"/>
        </springProfile>
    </logger>
    
    <logger name="org.springframework" level="INFO"/>
    <logger name="org.hibernate" level="WARN"/>
    <logger name="org.apache.kafka" level="WARN"/>
    
    <!-- Root Logger -->
    <root level="INFO">
        <appender-ref ref="ASYNC_CONSOLE"/>
        <springProfile name="prod">
            <appender-ref ref="ASYNC_FILE"/>
        </springProfile>
    </root>
</configuration>
