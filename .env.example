# Payment Engine - Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=jdbc:postgresql://localhost:5432/payment_engine
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=changeme
DB_HOST=localhost
DB_PORT=5432
DB_NAME=payment_engine

# =============================================================================
# KAFKA CONFIGURATION
# =============================================================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=payment-processing-service

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
JWT_SECRET=your-256-bit-secret-key-change-in-production-min-32-chars
JWT_JWK_SET_URI=
JWT_ISSUER_URI=

# Encryption for sensitive data
ENCRYPTION_KEY=aes-256-key-for-iso20022-messages-change-me

# Digital Signatures
SIGNATURE_PRIVATE_KEY=
SIGNATURE_PUBLIC_KEY=

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
CORE_BANKING_SERVICE_URL=http://localhost:8081
NOTIFICATION_SERVICE_URL=http://localhost:8083
EUREKA_SERVER_URL=http://localhost:8761/eureka

# =============================================================================
# AZURE KEY VAULT (Optional - if using)
# =============================================================================
AZURE_KEYVAULT_URI=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_TENANT_ID=

# =============================================================================
# OBSERVABILITY
# =============================================================================
JAEGER_ENDPOINT=http://localhost:14250
OTLP_ENDPOINT=http://localhost:4317

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=

# =============================================================================
# FEATURE FLAGS
# =============================================================================
EMAIL_NOTIFICATIONS_ENABLED=true
SMS_NOTIFICATIONS_ENABLED=false
WEBHOOK_NOTIFICATIONS_ENABLED=true
AUDIT_ENABLED=true
AUDIT_KAFKA_ENABLED=true

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
SPRING_PROFILES_ACTIVE=local
ENVIRONMENT=local
LOG_LEVEL=INFO
FEIGN_LOG_LEVEL=INFO
LOG_FILE=logs/payment-processing.log

# =============================================================================
# FRONTEND (React)
# =============================================================================
REACT_APP_API_BASE=http://localhost:8082
REACT_APP_WS_URL=ws://localhost:8082/payment-processing/ws
REACT_APP_ENVIRONMENT=development

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# SonarQube
SONAR_HOST_URL=http://localhost:9000
SONAR_TOKEN=

# Docker Registry
DOCKER_REGISTRY=docker.io
DOCKER_USERNAME=
DOCKER_PASSWORD=
