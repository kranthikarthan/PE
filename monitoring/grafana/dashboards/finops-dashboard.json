{
  "dashboard": {
    "id": null,
    "title": "Payment Engine - FinOps Dashboard",
    "tags": ["payment-engine", "finops", "cost"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Monthly Cost Trend",
        "type": "graph",
        "description": "Azure resource costs over time",
        "targets": [
          {
            "expr": "azure_cost_monthly_total",
            "legendFormat": "Total Monthly Cost"
          },
          {
            "expr": "azure_cost_compute",
            "legendFormat": "Compute Costs"
          },
          {
            "expr": "azure_cost_storage",
            "legendFormat": "Storage Costs"
          },
          {
            "expr": "azure_cost_networking",
            "legendFormat": "Networking Costs"
          }
        ],
        "yAxes": [
          {
            "label": "Cost (USD)",
            "min": 0
          }
        ],
        "gridPos": {"h": 9, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Cost per Transaction",
        "type": "stat",
        "description": "Average infrastructure cost per transaction processed",
        "targets": [
          {
            "expr": "azure_cost_daily_total / sum(increase(transaction_completed_total[24h]))",
            "legendFormat": "Cost per Transaction"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 4,
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 0.01},
                {"color": "red", "value": 0.05}
              ]
            }
          }
        },
        "gridPos": {"h": 9, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Resource Utilization vs Cost",
        "type": "stat",
        "description": "Cost efficiency metric",
        "targets": [
          {
            "expr": "(avg(rate(container_cpu_usage_seconds_total[5m])) * 100) / (azure_cost_compute / 100)",
            "legendFormat": "CPU Efficiency Score"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 50},
                {"color": "green", "value": 80}
              ]
            }
          }
        },
        "gridPos": {"h": 9, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 4,
        "title": "Cost Breakdown by Service",
        "type": "piechart",
        "targets": [
          {
            "expr": "azure_cost_aks_cluster",
            "legendFormat": "AKS Cluster"
          },
          {
            "expr": "azure_cost_postgresql",
            "legendFormat": "PostgreSQL"
          },
          {
            "expr": "azure_cost_storage_account",
            "legendFormat": "Storage Account"
          },
          {
            "expr": "azure_cost_load_balancer",
            "legendFormat": "Load Balancer"
          },
          {
            "expr": "azure_cost_monitoring",
            "legendFormat": "Monitoring"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD"
          }
        },
        "gridPos": {"h": 9, "w": 12, "x": 0, "y": 9}
      },
      {
        "id": 5,
        "title": "Resource Scaling Recommendations",
        "type": "table",
        "description": "Cost optimization recommendations based on usage patterns",
        "targets": [
          {
            "expr": "avg_over_time(rate(container_cpu_usage_seconds_total[24h])) * 100",
            "legendFormat": "CPU Utilization %"
          },
          {
            "expr": "avg_over_time(container_memory_usage_bytes[24h]) / container_spec_memory_limit_bytes * 100",
            "legendFormat": "Memory Utilization %"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true
              },
              "renameByName": {
                "container": "Service",
                "Value": "Utilization"
              }
            }
          }
        ],
        "fieldConfig": {
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Recommendation"},
              "properties": [
                {
                  "id": "mappings",
                  "value": [
                    {"options": {"pattern": "^[0-9]$|^[1-2][0-9]$|^30$", "result": {"text": "ðŸ”» Scale Down"}}, "type": "regex"},
                    {"options": {"pattern": "^[3-6][0-9]$|^70$", "result": {"text": "âœ… Optimal"}}, "type": "regex"},
                    {"options": {"pattern": "^[7-9][0-9]$|^100$", "result": {"text": "ðŸ”º Scale Up"}}, "type": "regex"}
                  ]
                }
              ]
            }
          ]
        },
        "gridPos": {"h": 9, "w": 12, "x": 12, "y": 9}
      },
      {
        "id": 6,
        "title": "Cost Alerts & Budget Status",
        "type": "stat",
        "targets": [
          {
            "expr": "azure_budget_remaining_percentage",
            "legendFormat": "Budget Remaining"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 20},
                {"color": "green", "value": 50}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 18}
      },
      {
        "id": 7,
        "title": "Transaction Volume vs Cost",
        "type": "graph",
        "description": "Correlation between transaction volume and infrastructure costs",
        "targets": [
          {
            "expr": "sum(rate(transaction_completed_total[1h])) * 3600",
            "legendFormat": "Transactions per Hour"
          },
          {
            "expr": "azure_cost_hourly_total * 100",
            "legendFormat": "Hourly Cost (USD * 100)"
          }
        ],
        "yAxes": [
          {
            "label": "Transactions / Cost",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 16, "x": 8, "y": 18}
      },
      {
        "id": 8,
        "title": "Reserved Instance Utilization",
        "type": "graph",
        "targets": [
          {
            "expr": "azure_reserved_instance_utilization",
            "legendFormat": "RI Utilization %"
          }
        ],
        "yAxes": [
          {
            "label": "Utilization %",
            "min": 0,
            "max": 100
          }
        ],
        "thresholds": [
          {
            "value": 80,
            "colorMode": "critical",
            "op": "lt"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 26}
      },
      {
        "id": 9,
        "title": "Spot Instance Savings",
        "type": "stat",
        "targets": [
          {
            "expr": "azure_spot_instance_savings_percentage",
            "legendFormat": "Spot Savings"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 30},
                {"color": "green", "value": 60}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 26}
      }
    ],
    "time": {
      "from": "now-7d",
      "to": "now"
    },
    "refresh": "1h",
    "schemaVersion": 27,
    "version": 1
  }
}